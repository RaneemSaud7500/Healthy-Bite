        <meal type="breakfast" label="Breakfast">
            <recipe id="d_bf_1">
                <name>Oatmeal with Apple &amp; Cinnamon</name>
                <ingredients>
                    <item>1/2 cup rolled oats</item>
                    <item>1 cup low-fat milk or almond milk</item>
                    <item>1/2 apple (chopped)</item>
                    <item>1/4 tsp cinnamon</item>
                    <item>1 tsp honey (optional)</item>
                </ingredients>
                <steps>
                    <step>Boil milk and oats together until thick.</step>
                    <step>Add chopped apple and cinnamon.</step>
                    <step>Stir for 2-3 minutes and serve warm.</step>
                </steps>
                <image>https://frommybowl.com/wp-content/uploads/2023/09/Apple_Cinnamon_Oatmeal_Vegan_FromMyBowl-10.jpg</image>
            </recipe>
            <recipe id="d_bf_2">
                <name>Veggie Omelet</name>
                <ingredients>
                    <item>2 eggs</item>
                    <item>1/4 cup chopped tomatoes</item>
                    <item>1/4 cup chopped spinach</item>
                    <item>1 tsp olive oil</item>
                    <item>Pinch of salt and pepper</item>
                </ingredients>
                <steps>
                    <step>Beat eggs and mix with chopped vegetables.</step>
                    <step>Heat olive oil in a pan and pour the mixture.</step>
                    <step>Cook until both sides are firm, then serve.</step>
                </steps>
                <image>vo.jpg</image>
            </recipe>
            <recipe id="d_bf_3">
                <name>Greek Yogurt with Berries</name>
                <ingredients>
                    <item>1/2 cup plain Greek yogurt (no sugar)</item>
                    <item>1/4 cup mixed berries</item>
                    <item>1 tsp chia seeds</item>
                </ingredients>
                <steps>
                    <step>Mix yogurt and berries in a bowl.</step>
                    <step>Sprinkle chia seeds on top.</step>
                    <step>Chill for 10 minutes and serve.</step>
                </steps>
                <image>https://www.thekitchenmagpie.com/wp-content/uploads/images/2011/04/greekyogurtandberries1.jpg</image>
            </recipe>
        </meal>
        
